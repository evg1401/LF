{% extends 'Auth/layout.html.twig' %}

{% block title %} Авторизация {% endblock %}

{% block body %}

    <div class="text-center">
        <div class="alert-info">

            {{ result }}

        </div>
    </div>

    <div class="register-photo">
        <div class="form-container">
            <form method="post">
                <h2 class="text-center"><strong>Авторизация</strong></h2>
                <div class="form-group"><input class="form-control" type="text" name="username" placeholder="Логин">
                </div>
                <div class="form-group"><input class="form-control" type="password" name="password"
                                               placeholder="Пароль">
                </div>

                <div class="form-group">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input"
                                                                                   type="checkbox"
                                                                                   name="remember" value="yes">Запомнить
                            меня</label></div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Войти</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}