{% extends 'Auth/layout.html.twig' %}

{% block title %} Восстановление пароля {% endblock %}

{% block body %}

    <div class="text-center">
        <div class="alert-info">

            {{ result }}

        </div>
    </div>

    <div class="register-photo">
        <div class="form-container">
            <form method="post">
                <h2 class="text-center"><strong>Восстановление пароля</strong></h2>
                <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Введите email">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" name="submit" type="submit">Отправить</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

