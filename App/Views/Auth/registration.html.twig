{% extends 'Auth/layout.html.twig' %}

{% block title %} Регистрация {% endblock %}

{% block body %}

    <div class="text-center">
        {% if(result is iterable ) %}
            <div class="alert-danger">
                {% for error in result %}
                    {% for i in range(0,5) %}
                        {{ error[i] }} <br>
                    {% endfor %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert-info"> {{ result }} </div>
        {% endif %}
    </div>
    <div class="register-photo">
        <div class="form-container">
            <form method="post">
                <h2 class="text-center"><strong>Создание аккаунта</strong></h2>
                <div class="form-group"><input class="form-control" type="text" name="username" placeholder="Логин">
                </div>
                <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
                <div class="form-group"><input class="form-control" type="password" name="password"
                                               placeholder="Пароль">
                </div>
                <div class="form-group"><input class="form-control" type="password" name="password_confirm"
                                               placeholder="Еще раз пароль"></div>
                <div class="form-group"><input class="form-control" type="text" name="first_name" placeholder="Имя">
                </div>
                <div class="form-group"><input class="form-control" type="text" name="last_name" placeholder="Фамилия">
                </div>
                <div class="form-group">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input"
                                                                                   type="checkbox"
                                                                                   name="remember_me" value="yes">Запомнить
                            меня</label></div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Регистрация</button>
                </div>
                <a class="already" href="/login">Войдите, если же есть аккаунт?&nbsp;</a></form>
        </div>
    </div>

{% endblock %}